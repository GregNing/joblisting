<div class="col-md-12">
<div class="group">
    <%= link_to("New Jobs", new_job_path, class: "btn btn-primary pull-right") %>
</div>
<table class="table table-hover">
    <thead>
    <tr>    
        <td>職業</td>
        <td>工作內容</td>
    </tr>
    </thead>
    <tbody>
    <% @jobs.each do |job| %>
        <tr>          
    <td><%= link_to(job.title, job_path(job)) %></td>
    <td><%=  render_jobs_description(job) %></td>
        <td>
            <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", job_path(job),    class: "btn btn-sm btn-default", 
                        method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>